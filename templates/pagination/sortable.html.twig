{# templates/pagination/sortable.html.twig #}
<a{% for attr, value in options %} {{ attr }}="{{ value }}"{% endfor %}>
    <span class="float-end">
        {% if sorted %}
            {% if direction == 'desc' %}
                <i class="bi bi-sort-down"></i>
            {% else %}
                <i class="bi bi-sort-up"></i>
            {% endif %}
        {% else %}
            <i class="bi bi-filter"></i>
        {% endif %}
    </span>
    {{ title|raw }}
</a>
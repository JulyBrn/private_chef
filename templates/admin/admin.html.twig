{% extends 'admin/sidebar_admin.html.twig' %}  

{% block title_admin %}Tableau de Bord et Gestions{% endblock %}

{% block content_admin %}
    
    {# --- CARDS KPI (Optionnel, comme dans la maquette) --- #}
    <div class="row mb-4">
        {# Nouvelle Demande de Contact #}
        <div class="col-md-4">
            <div class="card kpi-card card-kpi-1 h-100"> 
                <div class="card-body">
                    <h5 class="card-title text-uppercase kpi-title">DEMANDES NON TRAITÉES</h5>
                    <div class="kpi-value">{{ prospects.getTotalItemCount }}</div>
                </div>
            </div>
        </div>
        {# Prestations Actives #}
        <div class="col-md-4">
            <div class="card kpi-card card-kpi-2 h-100">
                <div class="card-body">
                    <h5 class="card-title text-uppercase kpi-title">PRESTATIONS PUBLIÉES</h5>
                    <div class="kpi-value">{{ publications|length }}</div>
                </div>
            </div>
        </div>
        {# Menus Actifs #}
        <div class="col-md-4">
            <div class="card kpi-card card-kpi-3 h-100">
                <div class="card-body">
                    <h5 class="card-title text-uppercase kpi-title">MENUS DISPONIBLES</h5>
                    <div class="kpi-value">{{ tabMenu|length }}</div>
                </div>
            </div>
        </div>
    </div>
    
    {# --- SECTION 1 : DEMANDES DE CONTACT --- #}
    <section class="mb-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Demandes de contact</h5>
                <p class="card-subtitle mb-2 text-muted">Tu as <span class="text-primary fw-bold">{{ prospects.getTotalItemCount }}</span> demande{{ (prospects.getTotalItemCount > 1) ? 's' : '' }} à traiter.</p>
                
                <div class="table-responsive">
                    <table class="table table-striped table-hover mt-3 mb-0">
                        <thead>
                            <tr>
                                <th scope="col">{{ knp_pagination_sortable(prospects, 'Date', 'r.date') }}</th>
                                <th scope="col">{{ knp_pagination_sortable(prospects, 'Contact', 'r.name') }}</th>
                                <th scope="col">Coordonnées</th>
                                <th scope="col">Message</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for prospect in prospects %}
                            <tr>
                                <td>{{ prospect.date |format_datetime('short', 'short', locale: 'fr') }}</td>
                                <td>{{ prospect.name }}</td>
                                <td><div class="d-flex flex-column"><span>{{ prospect.phone }}</span><span class="text-muted small">{{ prospect.email }}</span></div></td>
                                <td>{{ prospect.message|length > 50 ? prospect.message|slice(0, 50) ~ '...' : prospect.message }}</td>
                                <td><a href="#" class="btn btn-sm btn-outline-primary">Voir / Traiter</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% if prospects.getTotalItemCount > 10 %}
                <div class="d-flex justify-content-end mt-3">
                    {{ knp_pagination_render(prospects) }}
                </div>
                {% endif %}
            </div>
        </div>
    </section>

    {# --- SECTION 2 : GESTION DES PRESTATIONS --- #}
    <section class="mb-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Gestion des Prestations</h5>
                <p class="card-subtitle mb-2 text-muted">Mettre à jour les textes affichés sur la page des prestations.</p>
                <a href="{{ path('publication.add')}}" class="btn btn-primary mb-3">Ajouter une prestation</a>
                
                <div class="table-responsive">
                    <table class="table table-striped table-hover mt-3 mb-0">
                        <thead>
                            <tr>
                                <th scope="col">Titre</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for publication in publications %}
                            <tr>
                                <td>{{ publication.title }}</td>
                                <td><a href="{{ path('publication.update', {id: publication.id } )}}" class="btn btn-outline-primary btn-sm">Modifier</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    {# --- SECTION 3 : GESTION DES MENUS --- #}
    <section class="mb-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Gestion des menus et des plats</h5>
                <p class="card-subtitle mb-2 text-muted">Gérer les exemples des menus visibles sur le site.</p>
                <a href="{{ path('menu.add')}}" class="btn btn-primary mb-3">Ajouter un menu</a>
                
                <div class="table-responsive">
                    <table class="table table-striped table-hover mt-3 mb-0">
                        <thead>
                            <tr>
                                <th scope="col">Libelle du menu</th>
                                <th scope="col">Plats associés</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for oneMenu in tabMenu %}
                            <tr>
                                <td>{{ oneMenu.title }}</td>
                                <td>
                                    <ul class="list-unstyled mb-0 small">
                                    {% for plat in oneMenu.plats %}
                                        <li><i class="fas fa-check-circle me-1 text-success"></i>{{ plat.libelle }}</li>
                                    {% endfor %}
                                    </ul>
                                </td>
                                <td>
                                    <a href="{{ path('menu.update', {id: oneMenu.id} )}}" class="btn btn-outline-primary btn-sm me-2">Modifier</a>
                                    
                                    {# Bouton de suppression sécurisé #}
                                    <form method="POST" action="{{ path('menu.delete', {'id': oneMenu.id}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer le menu {{ oneMenu.title|default(oneMenu.id) }} ?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ oneMenu.id) }}">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            Supprimer
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

{% endblock %}